
@{
    ViewBag.Title = "ViewAllTeacherAndAssign";
}
<style>
    .userimg {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        cursor: pointer;
    }
</style>
<link href="~/Content/ViewAllUserAssets/css/ToggleSwitch.css" rel="stylesheet" />
<link href="~/Content/ViewAllUserAssets/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/ViewAllUserAssets/css/sb-admin-2.css" rel="stylesheet" />




<main>
    <div class="container-fluid">

        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Assign Teacher</h4>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr class="text-center">
                                            <th>ID</th>
                                            <th> Image</th>
                                            <th>Full Name</th>
                                            <th>Father Name</th>
                                            <th>NIC</th>
                                            <th>Gender</th>
                                            <th>Assign</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="text-center">
                                                <td>@item.User_ID</td>
                                                <td> <img class="userimg" src="@Url.Content(@item.Picture)" alt=""></td>

                                                <td>@item.Full_Name</td>
                                                <td>@item.Father_Name</td>
                                                <td>@item.NIC</td>
                                                <td>@item.Gender</td>

                                                <td>@Html.ActionLink("Assign", "AssignTeacher", "Teacher", new { User_ID = @item.User_ID }, new { @class = "btn ", @style = "background:linear-gradient(90deg, rgba(2,0,36,1) 11%, rgba(130,116,221,1) 48%, rgba(43,44,117,1) 90%);color:white;" })</td>


                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- Your Profile Views Chart END-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


